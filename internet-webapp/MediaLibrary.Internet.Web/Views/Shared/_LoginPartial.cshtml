@using MediaLibrary.Internet.Web.Common
@if (User.Identity.IsAuthenticated)
{
    <nav class="navbar-nav ml-md-auto">
        <a class="nav-link active" href="~/uploadguide.pdf" target="_blank">Help</a>
        <nav class="nav-item dropdown">
            <a class="nav-link dropdown-toggle nav-user-dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-label="Account menu">
                <img src="@Url.Content(User.GetUserGraphPhoto())" class="nav-profile-photo rounded-circle" alt="">
            </a>
            <div class="dropdown-menu dropdown-menu-right">
                <h5 class="dropdown-item-text mb-0">@User.GetUserGraphDisplayName()</h5>
                <p class="dropdown-item-text text-muted mb-0">@User.GetUserGraphEmail()</p>
                <div class="dropdown-divider"></div>
                <form class="form-inline" method="get" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut">
                    <button type="submit" class="dropdown-item">Sign Out</button>
                </form>
            </div>
        </nav>
    </nav>
}
else
{
    <ul class="navbar-nav ml-md-auto">
        <li class="nav-item">
            <form class="form-inline" method="get" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignIn">
                <button type="submit" class="btn btn-primary">Sign In</button>
            </form>
        </li>
    </ul>
}
